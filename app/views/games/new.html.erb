<div class="container">
  <h2 class="d-flex justify-content-center m-3">New Game</h2>
  <div class="row">
    <% @letters.each do |letter| %>
    <div class="col-sm m-3 p-1 border-secondary rounded bg-info text-white text-center"><%= letter %></div>
    <% end %>
  </div>
  <form class="d-flex justify-content-center m-5" action="score" method="post" data-turbo="false">
    <label for="word">What is the longest word you can find?</label>
    <input class="border border-secondary rounded" type="text" name="word">
    <input class="btn btn-primary " type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
